<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane alignment="center" hgap="10" style="-fx-background-color: lightgrey;" styleClass="img" stylesheets="@style.css" vgap="10" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1">
    <padding><Insets bottom="40" left="40" right="40" top="40" /></padding>
    <columnConstraints>
        <ColumnConstraints halignment="RIGHT" maxWidth="Infinity" minWidth="100.0" prefWidth="100.0">
        </ColumnConstraints>
        <ColumnConstraints hgrow="ALWAYS" maxWidth="Infinity" minWidth="200.0" prefWidth="200.0">
        </ColumnConstraints>
        <ColumnConstraints />
        <ColumnConstraints />
    </columnConstraints>

    <Label text="SignUp Form (FXML)" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="0" GridPane.rowSpan="1">
        <font>
            <Font name="Arial" size="24" />
        </font>
        <GridPane.margin>
            <Insets bottom="20" left="0" right="0" top="20" />
        </GridPane.margin>
    </Label>

    <Label text="UserName : " GridPane.columnIndex="0" GridPane.rowIndex="1" />
     <!--Add Name Text Field -->
    <TextField fx:id="NameField" prefHeight="40" GridPane.columnIndex="1" GridPane.rowIndex="1" />

    <Label text="Password : " GridPane.columnIndex="0" GridPane.rowIndex="2" />
     <!--Add Password Text Field-->
    <TextField fx:id="passwordField" prefHeight="40" GridPane.columnIndex="1" GridPane.rowIndex="2" />

    <Label text="Phone No : " GridPane.columnIndex="0" GridPane.rowIndex="3" />
    <!--&lt;!&ndash; Add Phone Text Field &ndash;&gt;-->
    <TextField fx:id="phoneField" prefHeight="40" GridPane.columnIndex="1" GridPane.rowIndex="3" />

    <Label text="Email : " GridPane.columnIndex="0" GridPane.rowIndex="4" />
   <!-- &lt;!&ndash; Add Email Text Field &ndash;&gt;-->
    <TextField fx:id="emailField" prefHeight="40" GridPane.columnIndex="1" GridPane.rowIndex="4" />

    <Label text="Country: " GridPane.columnIndex="0" GridPane.rowIndex="5" />
   <!-- &lt;!&ndash;Add Country Combo box&ndash;&gt;-->
    <ComboBox fx:id="countryField" GridPane.columnIndex="1" GridPane.rowIndex="5" />

    <Label text="Religion: " GridPane.columnIndex="0" GridPane.rowIndex="6" />
    <!--Add Religion Text Field -->
    <ComboBox fx:id="religionField" GridPane.columnIndex="1" GridPane.rowIndex="6" />

    <Button fx:id="submitButton" defaultButton="true" prefHeight="40" prefWidth="100" text="Submit" GridPane.columnSpan="1" GridPane.halignment="CENTER" GridPane.rowIndex="7" GridPane.rowSpan="1">
        <GridPane.margin>
            <Insets bottom="20" left="0" right="0" top="20" />
        </GridPane.margin>
    </Button>
    <Button fx:id="cancelButton" defaultButton="true" prefHeight="40" prefWidth="100" text="Cancel" GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="7" GridPane.rowSpan="1">
        <GridPane.margin>
            <Insets bottom="20" left="0" right="0" top="20" />
        </GridPane.margin>
    </Button>

    <rowConstraints>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
    </rowConstraints>
</GridPane>